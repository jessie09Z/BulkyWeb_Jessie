@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3  ">
        <div class="col-12 text-center"></div>
        <h2 class="text-white py-2">Create Category</h2>
    </div>

    <div class="card-body py-2">
        <form method="post">
            @*<input asp-for="Id" hidden/>*@
            <div class="border p-3 mt-4">
              
                <div>
                    <div asp-validation-summary="ModelOnly"></div>
                </div>

                <div class="mb-3 row p-1">
                    <label class="p-0" asp-for="Name"></label>
                    <input type="text" class="form-control mt-2" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-bg-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label class="p-0" asp-for="DisplayOrder"></label>
                    <input type="text" class="form-control mt-2" asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder" class="text-bg-danger"></span>
                </div>
                <div class="row p-1">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary mt-2 form-control">Update</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control mt-2">
                            Back to Lists
                        </a>
                    </div>

                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}