@{
}
@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3  ">
        <div class="col-12 text-center"></div>
        <h2 class="text-primary">Delete Category</h2>
    </div>

    <div class="card-body py-2">

        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
               
                <div>
                    <div asp-validation-summary="ModelOnly"></div>
                </div>

                <div class="mb-3 row p-1">
                    <label class="p-0" asp-for="Name"></label>
                    <input type="text" class="form-control mt-2" disabled asp-for="Name" />

                </div>

                <div class="mb-3 row p-1">
                    <label class="p-0" asp-for="DisplayOrder"></label>
                    <input type="text" class="form-control mt-2" disabled asp-for="DisplayOrder" />

                </div>
                <div class="row p-1">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger mt-2 form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control mt-2">
                            Back to Lists
                        </a>
                    </div>

                </div>


            </div>
        </form>

    </div>
</div>

